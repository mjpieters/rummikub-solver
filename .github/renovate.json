{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "addLabels": [
    "dependencies",
    "bot"
  ],
  "extends": [
    "config:best-practices"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "description": "Update the renovate pre-commit-hooks once a week at most.",
      "matchPackageNames": ["renovatebot/pre-commit-hooks"],
      "automerge": true,
      "schedule": "* 0-3 * * 1"
    }
  ],
  "platformAutomerge": true
}
